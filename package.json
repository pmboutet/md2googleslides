{
  "name": "md2gslides",
  "version": "0.5.3",
  "description": "Convert Markdown to Google Slides",
  "main": "index.js",
  "files": [
    "index.js",
    "bin/",
    "lib/",
    "server.js",
    "LICENSE",
    "README.md",
    "CONTRIBUTING.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "compile": "tsc && babel --extensions '.ts,.js' --source-maps both -d lib/ src/",
    "prepublishOnly": "npm run compile",
    "exec": "npm run compile && node bin/md2gslides.js",
    "server": "node server.js",
    "start": "npm run server",
    "prepare": "npm run compile"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pmboutet/md2googleslides"
  },
  "keywords": [
    "markdown",
    "google",
    "slides",
    "api",
    "server",
    "http"
  ],
  "author": "Steven Bazyl",
  "license": "Apache-2.0",
  "dependencies": {
    "argparse": "^2.0.1",
    "await-to-js": "^3.0.0",
    "core-js": "^3.44.0",
    "debug": "^4.4.1",
    "express": "^4.21.2",
    "extend": "^3.0.2",
    "file-url": "^4.0.0",
