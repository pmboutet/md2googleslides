    "googleapis": "^152.0.0",
    "highlight.js": "^11.11.1",
    "inline-styles-parse": "^1.2.0",
    "jsonfile": "^6.1.0",
    "layout": "^2.2.0",
    "lodash": "^4.17.21",
    "lowdb": "^7.0.1",
    "lowlight": "^3.3.0",
